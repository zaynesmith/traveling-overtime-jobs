generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  passwordHash     String
  role             String   @default("jobseeker")
  employerProfile  Json?
  jobseekerProfile Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
